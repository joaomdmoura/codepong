<%= form_tag "/match_definition", :method => "post", :html => { :class => 'form-horizontal' } do %>
  <%- model_class = Player -%>
  <div class="page-header">
    <h1><%= @player.name %></h1>
    <h1>vs</h1>    
    <%= hidden_field_tag(:player_id, @player.id) %>
    <%= select_tag(:other_player_id, options_from_collection_for_select(Player.all, :id, :name)) %>
    <br /><br />
  </div>
  <div class="form-actions">
    <%= submit_tag 'Won', :class => 'btn' %>
    <%= submit_tag 'Lost', :class => 'btn btn-danger' %>
  </div>
<% end %>