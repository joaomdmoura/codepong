<%- model_class = Player -%>
<div class="page-header">
  <h1>Ranking</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:skill) %></th>
      <th><%= model_class.human_attribute_name(:doubt) %></th>
      <th><%= model_class.human_attribute_name(:wins) %></th>
      <th><%= model_class.human_attribute_name(:losses) %></th>
      <th><%= model_class.human_attribute_name(:draws) %></th>
      <th><%=t '.match' %></th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.id, players_path(player) %></td>
        <td><%= player.name %></td>
        <td><%= player.email %></td>
        <td><%= player.skill %></td>
        <td><%= player.doubt %></td>
        <td><%= player.wins %></td>
        <td><%= player.losses %></td>
        <td><%= player.draws %></td>
        <td>
          <%= link_to t('.won'),
                      player_won_path(player), 
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini' %>
          <%= link_to t('.lost'),
                      player_lost_path(player),
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_player_path,
            :class => 'btn btn-primary' %>
